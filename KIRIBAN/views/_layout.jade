doctype html
html(lang='en')
	head
		block title
			title KIRIBAN
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		block stylesheets
			link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
			link(rel='stylesheet', href='/stylesheets/common.css')
	body
		block header
			nav.navbar.navbar-dark.bg-inverse
				button.navbar-toggler.hidden-lg-up(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
				#navbar.container.collapse.navbar-toggleable-md
					a.navbar-brand(href='/') KIRIBAN
					ul.nav.navbar-nav
						if passport
							li.nav-item
								a.nav-link(href='/dashboard') ダッシュボード
							li.nav-item
								a.nav-link(href='/id/#{passport.id}') マイページ
						// li.nav-item
							// a.nav-link(href='/trend') トレンド
					ul.nav.navbar-nav.float-lg-right
						if passport
							li.nav-item.dropdown
								a#contentDropdown.nav-link.dropdown-toggle(href='', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
									img.icon(alt='icon',src='#{passport.value.icon}')
									| #{passport.value.userName}
								.dropdown-menu(aria-labelledby='contentDropdown')
									a.dropdown-item(href='/setting') 設定
									a.dropdown-item(href='/logout') ログアウト
						else
							li.nav-item
								a(href='/login').nav-link ログイン
		block main
		block footer
			footer.container-fluid.bg-inverse.text-white.text-center
				| フッターやで！
	block scripts
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js')
		script(src='/javascripts/bootstrap.min.js')